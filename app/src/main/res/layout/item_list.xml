<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:minHeight="?android:attr/listPreferredItemHeight"
              android:background="?android:attr/selectableItemBackground"
              android:padding="16dp"
              android:layout_height="wrap_content">

    <TextView android:id="@+id/cityName" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/cityTemp" android:gravity="end" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/cityState" android:gravity="end" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>

</LinearLayout>